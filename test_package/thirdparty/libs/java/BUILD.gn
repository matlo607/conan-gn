import("//local-config/installation_paths.gni")

config("jdk8_config") {
  visibility = [ ":jdk8" ]

  _java_home = "${java_root}"

  include_dirs = [
    "${_java_home}/include"
  ]

  if (current_os == "win") {
    include_dirs += [
      "${_java_home}/include/win32",
    ]
  } else {
    include_dirs += [
      "${_java_home}/include/linux",
    ]
  }

  if (current_os == "win") {
    libs = [
      "${_java_home}/lib/jvm.lib",
    ]
  } else {
    libs = [
      "jvm",
    ]
    lib_dirs = [
      "${_java_home}/jre/lib/amd64/server",
    ]
  }
}

group("jdk8") {
  public_configs = [
    ":jdk8_config",
  ]
}